<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EcommerceApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    xmlns:pages="clr-namespace:EcommerceApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">
    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent
                ContentTemplate="{DataTemplate pages:MainPage}"/>
        </Tab>
        
        <Tab Title="Cart" Icon="cart.png">
            <ShellContent
                ContentTemplate="{DataTemplate pages:CartPage}"/>
        </Tab>
        <Tab Title="Profile" Icon="profile.png">
            <ShellContent
                ContentTemplate="{DataTemplate pages:ProfilePage}"/>
        </Tab>
    </TabBar>
   

</Shell>
